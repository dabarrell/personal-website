<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="David Barrell's portfolio">
    <meta name="author" content="David Barrell">

    <title>Creative Resume | David Barrell</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="vendor/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/style.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" type="text/css" href="vendor/slick/slick.css"/>
    <link rel="stylesheet" type="text/css" href="vendor/slick/slick-theme.css"/>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.2/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>

    <!-- Header -->
		<div id="header">
			<div class="inner name"><a href="#illustration">David Barrell</a></div>
			<div id="navigation" class="nav">
				<ul class="nav">
  				<li class="nav-header"><a href="/index.html">back</a></li>
        </ul>
			</div>
		</div>

    <div id="creative-about" class="container">
      <div class="row text-left">
        <div class="col-xs-8 col-xs-offset-2 about-title">
          <p>
            {{creative.about.title}}
          </p>
        </div>
      </div>
      <div class="row info">
        <div class="col-xs-8 col-xs-offset-2 text-justify">
          <p>
            {{{creative.about.text}}}
          </p>
        </div>
      </div>
    </div>

    <div id="creative" class="container">
      {{#each creative.section}}
      <div id="{{id}}" class="resume-section section">
        <div class="row text-left">
          <div class="col-xs-8 col-xs-offset-2 section-title">
            <p>
              {{title}}
            </p>
          </div>
        </div>

        {{#each items}}
        <div class="section-content">
          <div class="row">
            <div class="col-xs-2 text-right year">
              {{year}}
            </div>
            {{!-- col-md-offset-3 col-xs-offset-2 col-xs-8  --}}
            <div class="col-xs-4 text-left titles">
              <p>
                <span class="degree">{{title}}</span>
              </p>
            </div>
            <div class="col-xs-4 text-right aux-info">
              <p>
                {{#if show}}
                <span class="show-name">{{show}}</span>,
                {{/if}}
                {{organisation}}
              </p>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      {{/each}}
    </div>

    <div id="footer">
      <div class="row">
        <div class="copyright">
          Â© David Barrell 2017
        </div>
        <div class="links">
          {{#each footerLink}}
            <a href="{{url}}">{{link}}</a>
            {{#unless @last}}
              //
            {{/unless}}
          {{/each}}
        </div>
      </div>
    </div>


    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="js/main.min.js" charset="utf-8"></script>
    <script type="text/javascript" src="vendor/slick/slick.min.js"></script>
  </body>
</html>
